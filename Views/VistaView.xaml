<Window x:Class="Zapateria.Views.VistaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zapateria.Views"
        mc:Ignorable="d"
        Title="VistaView" Height="450" Width="800">
    <Grid>
        <Button x:Name="imageButton" Width="800" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Click="imageButton_Click">
            <Image Source="https://www.jonishoes.com/wp-content/uploads/2018/10/banner-web-AW1819-ZAPATOS-1024x410.jpg" 
           Width="500" Height="300" Stretch="Fill" />
        </Button>


    </Grid>
</Window>
